<Window x:Class="PasswordDatabase.DeleteAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordDatabase"
        mc:Ignorable="d"
        Title="DeleteAccount" Height="169.132" Width="306.123" Topmost="True" Icon="Resources/Logo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Background="#FFEBEBEB" TextWrapping="WrapWithOverflow" x:Name="lLabel" Grid.Row="0"></TextBlock>
        <TextBox Background="Beige" Grid.Row="1" ToolTip="Write 'DELETE' and press OK." x:Name="tbText"></TextBox>
        <Button Grid.Row="2" IsDefault="True" Click="Button_Click">OK</Button>
        <Button Grid.Row="3" IsCancel="True">Cancel</Button>
    </Grid>
</Window>
